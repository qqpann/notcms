{
  "$schema": "https://mintlify.com/docs.json",
  "name": "NotCMS",
  "logo": {
    "dark": "/assets/notcms-icon.png",
    "light": "/assets/notcms-icon.png",
    "href": "https://notcms.com"
  },
  "favicon": "/assets/notcms-icon.png",
  "theme": "mint",
  "modeToggle": {
    "default": "dark"
  },
  "topbarLinks": [
    {
      "name": "Homepage",
      "url": "https://notcms.com"
    },
    {
      "name": "GitHub",
      "url": "https://github.com/qqpann/notcms"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "https://dash.notcms.com",
    "style": "roundedRectangle"
  },
  "tabs": [],
  "anchors": [
    {
      "name": "Templates",
      "icon": "rectangle-terminal",
      "url": "https://notcms.com/templates"
    },
    {
      "name": "Blog",
      "icon": "newspaper",
      "url": "https://notcms.com/blog"
    }
  ],
  "navigation": {
    "languages": [
      {
        "language": "en",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["en/introduction", "en/quickstart"]
          },
          {
            "group": "Usage",
            "pages": [
              "en/usage/initializing-client",
              "en/usage/list",
              "en/usage/get"
            ]
          },
          {
            "group": "CLI Commands",
            "pages": ["en/cli-commands/init", "en/cli-commands/pull"]
          },
          {
            "group": "Examples",
            "pages": ["en/examples/nextjs"]
          }
        ]
      },
      {
        "language": "ja",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["ja/introduction", "ja/quickstart"]
          },
          {
            "group": "Usage",
            "pages": [
              "ja/usage/initializing-client",
              "ja/usage/list",
              "ja/usage/get"
            ]
          },
          {
            "group": "CLI Commands",
            "pages": ["ja/cli-commands/init", "ja/cli-commands/pull"]
          },
          {
            "group": "Examples",
            "pages": ["ja/examples/nextjs"]
          }
        ]
      }
    ]
  },
  "footerSocials": {
    "x": "https://x.com/notcmsjs",
    "github": "https://github.com/qqpann/notcms"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "metadata": {
    "og:site_name": "NotCMS Documentation",
    "og:description": "Type-safe headless CMS powered by Notion",
    "twitter:site": "@notcmsjs"
  },
  "analytics": {
    "plausible": {
      "domain": "docs.notcms.com"
    }
  },
  "i18n": [
    {
      "locale": "en",
      "name": "English"
    },
    {
      "locale": "ja",
      "name": "日本語"
    }
  ]
}
