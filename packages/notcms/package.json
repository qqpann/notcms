{
  "name": "notcms",
  "version": "0.0.13-development",
  "description": "NotCMS makes it easy to build a CMS for your website.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "./dist/index.d.ts",
  "files": ["dist/**/*"],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "watch": "tsc --project tsconfig.build.json --watch",
    "clean": "rm -rf ./dist/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "format": "biome format --write .",
    "lint-biome": "biome lint --write .",
    "check": "biome check --write .",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qqpann/notcms.git"
  },
  "license": "MIT",
  "author": {
    "name": "Qiushi Pan",
    "email": "17402261+qqpann@users.noreply.github.com",
    "url": "https://github.com/qqpann"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "notcms",
    "cms",
    "content management system",
    "notion",
    "markdown",
    "ts",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/qqpann/notcms/issues"
  },
  "homepage": "https://github.com/qqpann/notcms#readme",
  "dependencies": {},
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/node": "^22.1.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "semantic-release": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^3.0.9"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "biome ci ."
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
